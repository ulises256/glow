verde = #45c900
rosa = #f53277
azul = #40ccf4

@import '../../../../default.styl'
mobile = 'screen and (max-width: 768px) '
tablet = 'screen and (min-width: 768px) and (max-width : 1024px)'

transition(duracion, delay)
    -webkit-transition all duracion cubic-bezier(0.445, 0.050, 0.550, 0.950)
    transition all duracion cubic-bezier(0.445, 0.050, 0.550, 0.950)
    -webkit-transition-delay delay ease-in-out
    transition-delay delay ease-in-out

.carreras
    display flex
    justify-content center
    width 100%
    height calc(100vh - 80px)
    max-height 90vh
    @media mobile
        height inherit
        max-height inherit
    .carreras-content
        display flex
        width 90%
        margin-top 20px
        max-height 100%
        flex-direction column
        justify-content center
        align-items center
        .arriba
            .flecha
                opacity 0
        .arriba, .abajo
            display flex
            width 100%
            max-height 100%
            height: 100%;
            align-items: center;
            @media mobile
                flex-direction column
                height inherit
                max-height inherit
            .title
                height 100%
                display flex
                flex 1
                flex-direction column
                width 25%
                @media mobile
                    width 100%
                    height inherit
                    max-height inherit
                h1
                    font-size 62px
                    font-family Loto
                    color white
                    margin 0px
                    @media tablet
                        font-size 25px
                    @media mobile
                        font-size 25px
                        text-align center
            .carreritas-container
                position relative
                width 85%
                .carreritas
                    display flex
                    align-items center
                    height 300px
                    @media mobile
                        height inherit
                        flex-direction column
                    .flecha-container
                        height 100%
                        display flex
                        align-items center
                        mat-icon
                            color rosa
                    .carrera-content
                        display flex
                        justify-content center
                        align-items start
                        position relative
                        height 100%
                        width 100%
                        transition(500ms, 0)
                        &:hover
                            cursor pointer
                            transform rotate(1deg) scale(1.1)
                        .carrera
                            z-index 2
                            height 75%
                            width 75%
                            margin 10px
                            .imagen-container
                                width 100%
                                height calc(100% - 100px)
                                background-position center
                                background-size cover

                            .pie
                                width 100%
                                height: 100px;
                                position relative
                                .info
                                    z-index 2
                                    width 100%
                                    height 100px
                                    display flex
                                    flex-direction row
                                    justify-content center
                                    align-items center
                                    color white
                                    position relative
                                    .fecha
                                        font-size 11px
                                        display flex
                                        flex-direction column
                                        flex 1
                                        height 100%
                                        p
                                            font-family Loto
                                            margin 2px
                                            font-weight 300
                                            &.dia
                                                font-size 35px
                                                @media normal
                                                    font-size 28px
                                            &.mes
                                                font-size 16px
                                                @media normal
                                                    font-size 12px
                                            &.ano
                                                font-size 10px
                                    .nombre
                                        flex 3
                                        height 100%
                                        display flex
                                        flex-direction column
                                        justify-content center
                                        align-items center
                                        p
                                            margin 0px
                                        h2

                                            margin 0px
                                            font-size 30px
                                            text-align center
                                            font-family Gloss_And_Bloom
                                            @media normal
                                                font-size 20px
                                mancha
                                    width 100%
                                    height 100%
                                    position absolute
                                    top 0px
                                    left 0px
                                    z-index 1
